<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8" />
    <title>Tera Demo</title>

    <link rel="stylesheet" href="./public/style.css" />
    <link rel="stylesheet" href="./public/modal.css" />

    <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
    <script src="public/modal.js"></script>
    <script src="public/script.js"></script>
   <meta name="viewport" content="width=device-width, initial-scale=1">
</head>

<body id="body">

    <div class="container my-4">
        <div class="row">
            <ul class="nav nav-tabs" id="myTab" role="tablist">
                <li class="nav-item" role="presentation">
                    <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true">Video</a>
                </li>
                <li class="nav-item" role="presentation">
                    <a class="nav-link" id="profile-tab" data-toggle="tab" href="#profile" role="tab" aria-controls="profile" aria-selected="false">Playlist</a>
                </li>
                <li class="nav-item" role="presentation">
                    <a class="nav-link" id="streams-tab" data-toggle="tab" href="#streams" role="tab" aria-controls="streams" aria-selected="false">Stream</a>
                </li>
                <li class="nav-item" role="presentation">
                    <a class="nav-link" id="tv-shows-tab" data-toggle="tab" href="#tv-shows" role="tab" aria-controls="tv-shows" aria-selected="false">TV Shows</a>
                </li>

                <li class="nav-item" role="presentation">
                    <a class="nav-link" id="movies-tab" data-toggle="tab" href="#movies" role="tab" aria-controls="movies" aria-selected="false">Movies</a>
                </li>
                <li class="nav-item" role="presentation">
                    <a class="nav-link" id="favourites-tab" data-toggle="tab" href="#favourites" role="tab" aria-controls="favourites" aria-selected="false">favourites</a>
                </li>
            </ul>
        </div>

        <div class="tab-content" id="myTabContent">
            <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
                <form action="/" method="post" accept-charset="utf-8" id="startVideo">
                    URL:<input type="text" name="target" class="form-control" />
                    <input type="hidden" name="action" value="video" />
                    <input type="submit" value="Start" id="startBtn" class="btn btn-primary" />
                </form>
            </div>
            <div class="tab-pane fade" id="profile" role="tabpanel" aria-labelledby="profile-tab">
                <form action="/add" method="post" accept-charset="utf-8" id="addPlaylist">
                    Add to Playlist:<input type="text" name="target" class="form-control">
                    <input type="hidden" name="action" value="playlist" />
                    <input type="submit" value="Add" class="btn btn-primary" />
                </form>
                <button value="Start" id="start-playlist" class="btn btn-primary">Start</button>
            </div>
            <div class="tab-pane fade" id="streams" role="tabpanel" aria-labelledby="streams-tab">
                <ul class="list-group">
                    {% for streams in settings.stream_urls %}
                    <li class="list-group-item"><a href="/player/play?target={{streams.url}}" data-target="{{streams.url}}">
                            <span class="tv-channels" style="background-image: url({{streams.image}});"></span> 
                            </a></li>
                    {% endfor %}
                </ul>

            </div>
            <div class="tab-pane fade" id="tv-shows" role="tabpanel" aria-labelledby="tv-shows-tab">
            </div>
            <div class="tab-pane fade" id="movies" role="tabpanel" aria-labelledby="movies-tab">
            </div>
            <div class="tab-pane fade" id="favourites" role="tabpanel" aria-labelledby="favourites-tab">
            </div>
        </div>

    </div>
    {% block searchResult %}{% endblock searchResult %}
    <div id="searchResult">
    </div>

    <div id="searchMovieContainer">
        {% block movieSearchModal %}{% endblock movieSearchModal %}


        {% block episodeModal %}{% endblock episodeModal %}

        {% block clientSelection %}{% endblock clientSelection %}
    </div>
</body>

</html>
